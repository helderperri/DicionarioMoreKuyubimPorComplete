<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicionarioMoreKuyubim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/japiim_dark</item>
        <item name="colorPrimaryVariant">@color/japiim_light</item>
        <item name="colorOnPrimary">@color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/japiim_light</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.japiim.dic.morekuyubim.por.SplashScsreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
<!--        <item name="windowSplashScreenBackground">@color/...</item>-->

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_combinado</item>-->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_japiim</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
<!--        <item name="postSplashScreenTheme">@style/Theme.App</item>-->
    </style>
